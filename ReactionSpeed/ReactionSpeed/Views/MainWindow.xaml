<Window x:Class="ReactionSpeed.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReactionSpeed"
        mc:Ignorable="d"
        Title="ReactionSpeed" Height="450" Width="800">
    <Grid Margin="0,0,0,-16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="TestView"  Margin="10" Width="200" Command="{Binding Path=TestViewCommand}"/>
            <Button Content="DetailView" Margin="10" Width="200"/>
            <Button Content="Database test" Margin="10" Width="200"/>
        </StackPanel>
        <ContentControl Grid.Row="1" Content="{Binding SelectedViewModel}" />

    </Grid>
</Window>
